---
import { Icon } from 'astro-icon/components';
import { ME, SOCIAL_LINKS } from '../consts';

const today = new Date();
---

<footer class="footer footer-center p-10 bg-base-200 text-base-content">
  <nav class="grid grid-flow-col gap-4">
    <a href="/" class="link link-hover">Home</a>
    <a href="/blog" class="link link-hover">Blog</a>
    <a href="/tags" class="link link-hover">Tags</a>
    <a href="/cv" class="link link-hover">CV</a>
    <a href="/about" class="link link-hover">About</a>
  </nav>

  <nav>
    <div class="grid grid-flow-col gap-4">
      <a
        href={SOCIAL_LINKS.github}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-primary transition-colors"
        aria-label="GitHub"
      >
        <Icon name="tabler:brand-github" class="w-6 h-6" />
      </a>
      <a
        href={SOCIAL_LINKS.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-primary transition-colors"
        aria-label="LinkedIn"
      >
        <Icon name="tabler:brand-linkedin" class="w-6 h-6" />
      </a>
    </div>
  </nav>

  <aside>
    <p>&copy; {today.getFullYear()} {ME}. All rights reserved.</p>
  </aside>
</footer>
