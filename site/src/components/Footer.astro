---
import { Icon } from 'astro-icon/components';
import { ME, SOCIAL_LINKS } from '../consts';

const footerLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/tags', label: 'Tags' },
  { href: '/cv', label: 'CV' },
  { href: '/about', label: 'About' },
];

const socialLinks = [
  { href: SOCIAL_LINKS.github, icon: 'tabler:brand-github', label: 'GitHub' },
  {
    href: SOCIAL_LINKS.linkedin,
    icon: 'tabler:brand-linkedin',
    label: 'LinkedIn',
  },
];
---

<footer class="bg-base-200 text-base-content p-10">
  <div class="flex flex-col items-center gap-4">
    <nav class="flex flex-wrap justify-center gap-x-4 gap-y-2">
      {footerLinks.map((link) => (
        <a href={link.href} class="link link-hover">{link.label}</a>
      ))}
    </nav>

    <div class="flex justify-center gap-4">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-primary transition-colors"
          aria-label={link.label}
        >
          <Icon name={link.icon} class="w-6 h-6" />
        </a>
      ))}
    </div>

    <p class="text-sm text-base-content/70">&copy; {new Date().getFullYear()} {ME}. All rights reserved.</p>
  </div>
</footer>
